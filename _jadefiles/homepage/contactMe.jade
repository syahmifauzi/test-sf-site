  .contact-form
    form(method="POST")#contactForm
      input(type="hidden" name="_format" value="plain")
      input(type="hidden" name="_subject" value="Syahmi's Website")
      input(type="text" name="name" placeholder="Full Name*" required).name
      input(type="text" name="phone" placeholder="Phone").phone
      input(type="email" name="_replyto" placeholder="E-mail*" required).email
      input(type="text" name="_gotcha" style="display:none;")
      input(type="hidden" name="_next" value="{% if site.url %}{{ site.url }}{% else %}{{ site.local }}{% endif %}/#submitted")
      textarea(name="message" form="contactForm" placeholder="Your Message..*" required).message
      input(type="submit" value="Send").submit
    script.
      var contactForm = document.getElementById('contactForm');
